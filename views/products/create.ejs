<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Product</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="container">
            <h1>Product Management System</h1>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/categories">Categories</a></li>
                <li><a href="/products">Products</a></li>
            </ul>
        </div>
    </nav>
    
    <div class="container">
        <h2>Create New Product</h2>
        
        <% if (!categories || categories.length === 0) { %>
            <div class="alert alert-error">
                <p>⚠️ You need to create at least one category before adding products.</p>
                <a href="/categories/create" class="btn btn-primary" style="margin-top: 1rem;">Create Category First</a>
            </div>
        <% } else { %>
            <form action="/products" method="POST" class="form">
                <div class="form-group">
                    <label for="name">Product Name: <span style="color: red;">*</span></label>
                    <input type="text" id="name" name="name" required>
                </div>
                
                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea id="description" name="description" rows="4"></textarea>
                </div>
                
                <div class="form-group">
                    <label for="price">Price: <span style="color: red;">*</span></label>
                    <input type="number" id="price" name="price" step="0.01" min="0" required>
                </div>
                
                <div class="form-group">
                    <label for="category_id">Category: <span style="color: red;">*</span></label>
                    <select id="category_id" name="category_id" required>
                        <option value="">-- Select Category --</option>
                        <% categories.forEach(category => { %>
                            <option value="<%= category.id %>"><%= category.name %></option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">Create Product</button>
                    <a href="/products" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        <% } %>
    </div>
    
    <footer>
        <p>&copy; 2026 Product Management System</p>
    </footer>
</body>
</html>